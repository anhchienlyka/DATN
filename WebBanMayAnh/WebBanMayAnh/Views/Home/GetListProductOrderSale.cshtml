@model IEnumerable<WebBanMayAnh.Models.Product>
<!-- Begin Banner Area -->
<div class="banner-area section-space-top-100">
    <div class="container">
        <div class="row">
            @if (Model != null)
            {
                foreach (var item in Model)
                {
                    <div class="col-lg-4 col-md-6">
                        <div class="banner-item">
                            <div class="banner-img img-zoom-effect">
                                <img class="img-full" src="~/images/prduct/@item.Thumb" alt="Banner Image">
                                <div class="inner-content">
                                    <h5 class="offer">-@item.Discount Off</h5>
                                    <h4 class="title mb-5">@item.ProductName</h4>
                                    <div class="button-wrap">
                                        <a class="btn btn-primary btn-white-hover rounded-0" href="shop.html">Mua ngay</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }

        </div>
    </div>
</div>