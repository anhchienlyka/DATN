@model WebBanMayAnh.ViewModel.LoginViewModel

@{
    ViewData["Title"] = "Đăng Nhập";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Begin Main Content Area -->
<main class="main-content">
  
    <div class="login-register-area section-space-y-axis-100">
        <div class="container">
            <div class="row">
                <div class="col-lg-3">

                </div>
                <div class="col-lg-6 pt-10 pt-lg-0">
                    <form asp-action="Login" asp-controller="Account" method="post">
                        <div class="login-form">
                            <h4 style="text-align:center" class="login-title">Đăng nhập</h4>
                            <div class="row">
                                <div class="col-lg-12">
                                    <label>Tên đăng nhập</label>
                                    <input type="email" asp-for="UserName" placeholder="Tên đăng nhập">
                                </div>
                                <div class="col-lg-12">
                                    <label>Mật khẩu</label>
                                    <input asp-for="Password" type="password" placeholder="Mật khẩu">
                                </div>
                                <div class="col-md-8">
                                    <div class="check-box">
                                        <input type="checkbox" id="remember_me">
                                        <label for="remember_me">Lưu đăng nhập</label>
                                    </div>
                                </div>
                                <div class="col-md-4 pt-1 mt-md-0">
                                    <div class="forgotton-password_info">
                                        <a href="#"> Quên mật khẩu?</a>
                                    </div>
                                </div>
                                <div style="text-align:center" class="col-lg-12 pt-5">
                                    <button class="btn btn-custom-size lg-size btn-secondary btn-primary-hover rounded-0">Đăng nhập</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>
</main>
<!-- Main Content Area End Here -->