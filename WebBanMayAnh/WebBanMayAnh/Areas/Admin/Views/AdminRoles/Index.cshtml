@model IEnumerable<WebBanMayAnh.Models.Role>

@{
    ViewData["Title"] = "Quản lý quyền truy cập";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="row">
    <div class="page-header col-lg-8">
        <div class="header-sub-title">
            <nav class="breadcrumb breadcrumb-dash">
                <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
                <a asp-area="Admin" asp-controller="AdminRoles" asp-action="Index" class="breadcrumb-item">Danh sách quyền truy cập</a>
            </nav>
        </div>
    </div>
    <div class="col-lg-4 text-right">
        <a class="btn btn-primary" asp-area="Admin" asp-action="Create" asp-controller="AdminRoles">
            <i class="anticon anticon-plus-circle m-r-5"></i>
            <span>Thêm quyền truy cập</span>
        </a>
    </div>
</div>
<table class="table">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Tên</th>
            <th scope="col">Mô tả</th>
            <th scope="col">#</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.RoleID</th>
                <td>@item.RoleName</td>
                <td>@item.Description</td>
                <td>
                    <a class="btn btn-info m-r-5" asp-action="Details" asp-controller="AdminRoles" asp-area="Admin" asp-route-id="@item.RoleID">Chi tiết</a>
                    <a class="btn btn-warning m-r-5" asp-action="Edit" asp-controller="AdminRoles" asp-area="Admin" asp-route-id="@item.RoleID">Cập nhật</a>
                    <a class="btn btn-secondary m-r-5" asp-action="Delete" asp-controller="AdminRoles" asp-area="Admin" asp-route-id="@item.RoleID">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
