@model WebBanMayAnh.Models.Role

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div>
    <div class="page-header">
        <div class="header-sub-title">
            <nav class="breadcrumb breadcrumb-dash">
                <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
                <a asp-area="Admin" asp-controller="AdminRoles" asp-action="Index" class="breadcrumb-item">Danh sách quyền truy cập</a>
                <span class="breadcrumb-item active">Chỉnh sửa quyền truy cập</span>
            </nav>
        </div>
    </div>

    <form asp-action="Edit">
        <div class="card">
            <div class="card-body">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="RoleID" />
                <div class="form-group">
                    <label class="font-weight-semibold" asp-for="RoleName"></label>
                    <input type="text" class="form-control" asp-for="RoleName" placeholder="Role Name">
                    <span asp-validation-for="RoleName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="font-weight-semibold" asp-for="Description"></label>
                    <input type="text" class="form-control" asp-for="Description" placeholder="Description">
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-success m-r-5"><i class="anticon anticon-save"></i> Lưu</button>
            <a class="btn btn-secondary btn-tone m-r-5" asp-action="Index">Trở về</a>
        </div>
    </form>

</div>


